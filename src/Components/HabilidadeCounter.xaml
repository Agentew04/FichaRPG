<UserControl
    x:Class="Ficha.HabilidadeCounter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ficha"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <Style x:Name="middlehab" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <TextBlock Text="{x:Bind HabilidadeTitle}" Margin="10,0"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="+" Style="{ThemeResource ButtonRevealStyle}" Margin="5"  Width="33" Height="33" 
            Command="{x:Bind AddPointCommand}"/>
            <TextBlock Text="{x:Bind Points, Mode=OneWay}" Style="{StaticResource middlehab}"/>
            <Button Content="-" Style="{ThemeResource ButtonRevealStyle}" Margin="5"  Width="33" Height="33" 
            Command="{x:Bind RemovePointCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
